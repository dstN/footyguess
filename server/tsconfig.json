{
  "extends": "../.nuxt/tsconfig.server.json",
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "baseUrl": "..",
    "paths": {
      "~/*": ["./*"],
      "@components/*": ["./components/*"],
      "@composables/*": ["./composables/*"],
      "@pages/*": ["./pages/*"],
      "@layouts/*": ["./layouts/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@server/*": ["./server/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
