{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@components/*": ["./components/*"],
      "@composables/*": ["./composables/*"],
      "@pages/*": ["./pages/*"],
      "@layouts/*": ["./layouts/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@server/*": ["./server/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
